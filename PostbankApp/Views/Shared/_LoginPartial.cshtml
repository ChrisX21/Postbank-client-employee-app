@using Microsoft.AspNetCore.Identity
@using PostbankApp.Models
@inject SignInManager<PostbankUser> SignInManager
@inject UserManager<PostbankUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) )
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/ManageAccount">Account</a>
        </li>
        
        //TODO: make change pass button, logout button, profile pic(optional), change username and so on
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
